%html
%head
  %title
    Blogging | 
    = @title
  = stylesheet_link_tag    "application"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
  = render 'layouts/header'
  #appcontainter

    #appbody

      - if flash.count > 0
        %section.round
        - flash.each do |key, value|
          .flash{:class => key}
            = value
      
      = yield

  = render 'layouts/footer'

